@model DonationLibrary.App.ViewModels.AuthorDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.AuthorName</h1>
<ul>
    @foreach (var book in Model.Books)
    {
    <li><a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">@book.Title</a> (Borrowed)</li>
    }
</ul>

