@model DonationLibrary.App.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

    <div class="container">
        <h2>Donation Library</h2>

        <a asp-controller="Book" asp-action="Add" class="btn btn-success">Add new book</a>
        <br />
        <br />

        <table class="table table-striped table-responsive-lg">
            <thead>
                <tr class="row">
                    <th class="col-6">Title</th>
                    <th class="col-4">Author</th>
                    <th class="col-2">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Books)
                {
                <tr class="row">
                    <td class="col-6"><a asp-controller="Book" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></td>
                    <td class="col-4"><a asp-controller="Author" asp-action="Details" asp-route-id="@item.AuthorId">@item.Author.Name</a></td>
                    <td class="col-2">Borrowed</td>
                </tr>
                }
            </tbody>
        </table>
    </div>

